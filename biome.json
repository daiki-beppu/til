{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"*.config.js",
			"node_modules/**/*",
			"package.json",
			"package-lock.json",
			"yarn.lock",
			"pnpm-lock.yaml",
			"dist/**/*",
			"build/**/*",
			".next/**/*",
			"out/**/*",
			"coverage/**/*",
			".git/**/*",
			".github/**/*",
			".vscode/**/*",
			"public/**/*",
			"static/**/*",
			"*.min.js",
			"*.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"formatWithErrors": false,
		"include": ["**/*.{js,ts,jsx,tsx,json}"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noEmptyInterface": "warn"
			},
			"a11y": {
				"useAltText": "error",
				"useButtonType": "error",
				"useKeyWithClickEvents": "error",
				"useValidAnchor": "error"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"noUselessFragments": "warn"
			},
			"style": {
				"useBlockStatements": "error",
				"useConsistentArrayType": "error",
				"useImportType": "error"
			}
		},
		"ignore": [
			"*.config.js",
			"node_modules/**/*",
			"package.json",
			"package-lock.json",
			"yarn.lock",
			"pnpm-lock.yaml",
			"dist/**/*",
			"build/**/*",
			".next/**/*",
			"out/**/*",
			"coverage/**/*",
			".git/**/*",
			".github/**/*",
			".vscode/**/*",
			"public/**/*",
			"static/**/*",
			"*.min.js",
			"*.d.ts"
		],
		"include": ["**/*.{js,mjs,cjs,ts,jsx,tsx}"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteProperties": "asNeeded"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80
		}
	}
}
